<div class="products-top-wrap">
  <!-- Display Mode Toggle -->
  <form class="display-mode" method="get">
    <button title="Grid View" class="btn <%= params[:display] == 'grid' ? 'active' : '' %>" value="grid" name="display" type="submit">
      <i class="fa fa-th"></i>
    </button>
    <button title="List View" class="btn <%= params[:display] != 'grid' ? 'active' : '' %>" value="list" name="display" type="submit">
      <i class="fa fa-list"></i>
    </button>
    <input type="hidden" name="swoof" value="1">
  </form>

  <!-- Items Per Page -->
  <div class="filter-select-wrapper">
    <label class="filter-label">Show:</label>
    <form method="get">
      <%= select_tag :per_page, options_for_select(AppSettings::PER_PAGE_FILTER.collect { |key, val| [val, key] }, (params[:per_page] || 20)), {class: 'custom-select', onchange: 'this.form.submit()'} %>
    </form>
  </div>

  <!-- Product Type Filter -->
  <div class="filter-select-wrapper">
    <label class="filter-label">Type:</label>
    <form method="get" class="woocommerce-fillter">
      <%= select_tag :product_type, options_for_select(AppSettings::PRODUCT_TYPE_FILTER.collect { |key, val| [val, key] }, (params[:product_type] || '')), {class: 'custom-select', onchange: 'this.form.submit()'} %>
    </form>
  </div>

  <!-- Sort Order -->
  <div class="filter-select-wrapper">
    <label class="filter-label">Sort by:</label>
    <form class="woocommerce-ordering" method="get">
      <%= select_tag :sort, options_for_select(AppSettings::PRODUCT_SORTING.collect { |key, val| [val, key] }, (params[:sort] || '')), {class: 'custom-select', onchange: 'this.form.submit()'} %>
    </form>
  </div>
</div>